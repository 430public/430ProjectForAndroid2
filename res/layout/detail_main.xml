<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical" >

    <include layout="@layout/detail_top_show" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#EAECEB"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/indicate_view"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#F7F9F8" />
            <!-- 商品信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.68"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingBottom="8dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="8dip" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正品Adidas阿迪达斯男装2015冬季新品高尔夫系列保暖鞋"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/red"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256.0"
                        android:textColor="@color/red"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/isLove"
                        android:layout_marginLeft="160dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#F7F9F8" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.68"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="8dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="8dip" >

                <TextView
                    android:id="@+id/tv_gNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="库存" />

                <TextView
                    android:id="@+id/tv_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="是否包邮" />

                <TextView
                    android:id="@+id/tv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="点击量" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#F7F9F8" />

            <!-- 商品属性start -->


            <!-- <include layout="@layout/detail_main_attr" /> -->
            <!-- 商品属性stop -->
            <!-- 选择尺码 -->

            <RelativeLayout
                android:id="@+id/goods_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="10dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择 尺码"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/android_list_idex" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#F7F9F8" />

            <!-- 商品详情 -->

            <RelativeLayout
                android:id="@+id/goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="10dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textSize="16sp" />

<!--                 <ImageView -->
<!--                     android:id="@+id/imageView2" -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:layout_alignParentRight="true" -->
<!--                     android:layout_centerVertical="true" -->
<!--                     android:src="@drawable/android_list_idex" /> -->
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detail"
                    android:text="tv_detail_1"
                    android:id="@+id/tv_detail_1"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detail_1"
                    android:text="tv_detail_2"
                    android:id="@+id/tv_detail_2"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detail_2"
                    android:text="tv_detail_3"
                    android:id="@+id/tv_detail_3"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_detail_3"
                    android:text="tv_detail_4"
                    android:id="@+id/tv_detail_4"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#F7F9F8" />
            <!-- 评价 -->

            <LinearLayout
                android:id="@+id/goods_pj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="18dip"
                android:paddingRight="18dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/tv_pj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#DEE0DF" />
    <!-- Button -->

    <include layout="@layout/detail_main_bottom" 
        />

</LinearLayout>